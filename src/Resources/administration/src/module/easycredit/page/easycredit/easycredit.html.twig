{% block netzkollektiv_easycredit %}
    <sw-page class="easycredit">

        {% block netzkollektiv_easycredit_header %}
            <template slot="smart-bar-header">
                <h2>
                    {{ $tc('sw-settings.index.title') }}
                    <sw-icon name="small-arrow-medium-right" small></sw-icon>
                    {{ $tc('easycredit.header') }}
                </h2>
            </template>
        {% endblock %}

        {% block netzkollektiv_easycredit_actions %}
            <template #smart-bar-actions>
                {% block netzkollektiv_easycredit_actions_test %}
                    <sw-button-process
                            @click="onTest"
                            v-model="isTestSuccessful"
                            :isLoading="isTesting"
                            :disabled="testButtonDisabled">
                        {{ $tc('easycredit.settingForm.test') }}
                    </sw-button-process>
                {% endblock %}

                {% block netzkollektiv_easycredit_actions_save %}
                    <sw-button-process
                            class="sw-settings-login-registration__save-action"
                            :isLoading="isLoading"
                            :disabled="isLoading"
                            variant="primary"
                            v-model="isSaveSuccessful"
                            @click="onSave">
                        {{ $tc('easycredit.settingForm.save') }}
                    </sw-button-process>
                {% endblock %}
            </template>
        {% endblock %}

        {% block netzkollektiv_easycredit_content %}
            <template #content>
                {% block netzkollektiv_easycredit_content_card %}
                    <sw-card-view>
                        {% block netzkollektiv_easycredit_content_card_channel_config %}
                        <sw-sales-channel-config ref="configComponent"
                                                 domain="NetzkollektivEasyCredit.settings"
                                                 v-model="config">
                                {% block netzkollektiv_easycredit_content_card_channel_config_sales_channel %}
                                    <template #select="{ onInput, selectedSalesChannelId, salesChannel }">
                                        {% block netzkollektiv_easycredit_content_card_channel_config_sales_channel_card %}
                                            <sw-card title="Sales Channel Switch">
                                                {% block netzkollektiv_easycredit_content_card_channel_config_sales_channel_card_title %}
                                                    <sw-single-select :options="salesChannel"
                                                                      v-model="selectedSalesChannelId"
                                                                      labelProperty="translated.name"
                                                                      valueProperty="id"
                                                                      @input="onInput">
                                                    </sw-single-select>
                                                {% endblock %}
                                            </sw-card>
                                        {% endblock %}
                                    </template>
                                {% endblock %}

                                {% block netzkollektiv_easycredit_content_card_channel_config_cards %}
                                    <template #content="{ actualConfigData, allConfigs, selectedSalesChannelId }">
                                        <div v-if="actualConfigData">
                                            {% block netzkollektiv_easycredit_content_card_channel_config_credentials_card %}
                                                <easycredit-credentials :actualConfigData="actualConfigData" :allConfigs="allConfigs" :selectedSalesChannelId="selectedSalesChannelId"></easycredit-credentials>
                                            {% endblock %}

                                            {% block netzkollektiv_easycredit_content_card_channel_config_behavior %}
                                                <easycredit-behavior :actualConfigData="actualConfigData" :allConfigs="allConfigs" :selectedSalesChannelId="selectedSalesChannelId"></easycredit-behavior>
                                            {% endblock %}

                                            {% block netzkollektiv_easycredit_content_card_channel_config_widget %}
                                                <easycredit-widget :actualConfigData="actualConfigData" :allConfigs="allConfigs" :selectedSalesChannelId="selectedSalesChannelId"></easycredit-widget>
                                            {% endblock %}
                                        </div>
                                    </template>
                                {% endblock %}
                            </sw-sales-channel-config>
                        {% endblock %}

                        {% block netzkollektiv_easycredit_content_card_loading %}
                            <sw-loader v-if="isLoading">
                            </sw-loader>
                        {% endblock %}
                    </sw-card-view>
                {% endblock %}
            </template>
        {% endblock %}
    </sw-page>
{% endblock %}